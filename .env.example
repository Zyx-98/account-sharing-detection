# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=secret
DATABASE_NAME=account_sharing_db
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Security & Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
BCRYPT_ROUNDS=12

# Risk Analysis Thresholds
MAX_CONCURRENT_SESSIONS=2
MAX_DEVICES_PER_ACCOUNT=3
SUSPICIOUS_DISTANCE_KM=500
IMPOSSIBLE_TRAVEL_SPEED_KMH=800
HIGH_RISK_THRESHOLD=60
CRITICAL_RISK_THRESHOLD=80

# Device Trust
DEVICE_TRUST_SCORE_THRESHOLD=70
NEW_DEVICE_INITIAL_SCORE=50
TRUSTED_DEVICE_SCORE=90

# Cache TTL (in seconds)
CACHE_USER_TTL=900
CACHE_DEVICE_TTL=86400
CACHE_RISK_SCORE_TTL=300

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_GEOLOCATION_CHECK=true
ENABLE_IMPOSSIBLE_TRAVEL_CHECK=true